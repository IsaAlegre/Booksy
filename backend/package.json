{
  "name": "backend",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": " tsx watch src/app.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "migration:generate": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate -d ./src/config/data_source.ts",
    "migration:run": "node ./node_modules/typeorm/cli.js migration:run -d ./dist/config/data_source.js",
    "migration:revert": "npx typeorm migration:revert -d ./dist/config/data_source.js",
    "start:prod": "node dist/app.js",
    "start:render": "npm run build && npm run migration:run && npm run start:prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "typeorm-ts-node-commonjs": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
